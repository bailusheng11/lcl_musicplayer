/* 水平间距 */
.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.container .top {
  width: 100%;
  height: 30%;
  background-color: rgba(0, 0, 0, 0.1);
  z-index: 999;
}
.container .center {
  width: 100%;
  padding: 0 20rpx;
  height: 65%;
  background-color: #273444;
  color: #fff;
  z-index: 999;
  box-sizing: border-box;
}
.container .center .topSetter {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
}
.container .center .topSetter .icons {
  width: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .center .scroll-list {
  width: 100%;
  height: calc(100% - 100rpx);
}
.container .center .scroll-list .song-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  border-top: 1px solid #3A3A3A;
}
.container .bottom {
  width: 100%;
  height: 5%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 3px solid gray;
  background-color: #273444;
  color: #000;
  box-sizing: border-box;
}
.active {
  color: #18BC37;
}

