/* 水平间距 */
.sugPlaylist {
  position: relative;
}
.sugPlaylist .sugg-title {
  margin: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.sugPlaylist .sugg-title text {
  font-weight: bold;
}
.sugPlaylist .sugg-title button {
  margin: 0;
  padding: 0 5px;
  height: 50rpx;
  line-height: 50rpx;
}
.sugPlaylist .sugg-box {
  white-space: nowrap;
  margin: 0 20rpx;
}
.sugPlaylist .sugg-box .sugg-list {
  display: inline-block;
  margin-right: 10rpx;
}
.sugPlaylist .sugg-box .sugg-list .sugg-item {
  display: flex;
  flex-direction: column;
  width: 100px;
  font-size: 12px;
  margin-right: 10rpx;
}
.sugPlaylist .sugg-box .sugg-list .sugg-item image {
  width: 100px;
  height: 100px;
  border-radius: 10rpx;
}
.sugPlaylist .sugg-box .sugg-list .sugg-item text {
  white-space: pre-wrap;
  height: 34px;
  text-overflow: ellipsis;
  overflow: hidden;
}

